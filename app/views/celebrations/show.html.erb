<div class="min-h-screen w-full overflow-auto bg-stone-50">
  <div class="mx-auto max-w-5xl px-4 py-10">
    <div class="mx-auto max-w-md">
      <div class="mb-6 flex items-center justify-between">
        <%= link_to mypage_path, class: "inline-flex items-center gap-2 text-sm text-stone-500 hover:text-stone-700" do %>
          <span>←</span><span>マイページへ戻る</span>
        <% end %>
      </div>

      <div class="rounded-2xl border border-stone-200 bg-white p-8 shadow-sm">
        <% if flash[:notice] %>
          <div class="mb-4 rounded-xl border border-emerald-200 bg-emerald-50 p-3 text-sm text-emerald-700">
            <%= flash[:notice] %>
          </div>
        <% end %>

        <h1 class="text-2xl font-bold tracking-tight text-stone-900">
          <%= @celebration.title %>
        </h1>

        <div class="mt-6 space-y-2 text-sm text-stone-700">


          <% if @celebration.celebration_date.present? %>
            <p class="mt-2 text-sm text-stone-600">
              <%= @celebration.celebration_date %>
            </p>
              <% end %>
            <p>
              <%= @celebration.giver_name %>
              <span class="text-stone-500">から</span>
              <%= @celebration.receiver_name %>
              <span class="text-stone-500">へ</span>
            </p>

            <% if @celebration.short_message.present? %>
            <p class="mt-2 text-sm text-stone-600">
              <%= @celebration.short_message %>
            </p>
              <% end %>
        </div>

        
        <div class="mt-6 items-center gap-2">
          <p class="text-sm font-semibold text-stone-800">閲覧用URL</p>

         <div class="mt-4 px-4 rounded-xl border border-stone-200 bg-stone-50 p-4">
           <p class="mt-4 mb-4 break-all text-xs text-stone-600">
             <%= request.original_url %>
          </p>
        </div>
        </div>

        <p class="mt-4 text-xs text-stone-500">
        作成日：<%= l @celebration.created_at.to_date %>
        </p>


        <div class="mt-8">
          <%= link_to mypage_path,
                class: "inline-flex w-full justify-center rounded-xl bg-teal-700 px-6 py-3 text-sm font-semibold text-white shadow-[0_4px_0_#115e59] transition-all duration-150 hover:bg-teal-600 active:translate-y-[3px] active:scale-[0.98] active:shadow-none" do %>
            マイページへ戻る
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
